@model Activity

<div class="container">
    <div class="row ">
        <div class="col-4 mr-auto"><h2>Dojo Activity Center</h2></div>
        <div class="offset-3 col-2 my-auto text-right"><h5><a href="/dashboard">Dashboard</a></h5></div>
        <div class="col-2 my-auto  text-center"><h5><a href="/logout">Log Out</a></h5></div>
    </div>


    <div class="row">
        <div class="col-5">
            <form asp-action="CreateActivity" asp-controller="Home" method="post" class="form ">
            
            <span asp-validation-for="Title" class="red"></span><br>
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control ">
            <br>

            <span asp-validation-for="ActivityDate" class="red"></span><br>
            <label asp-for="ActivityDate"></label>
            <input asp-for="ActivityDate" class="form-control " type="Date">
            <br>

            <span asp-validation-for="ActivityTime" class="red"></span><br>
            <label asp-for="ActivityTime"></label>
            <input asp-for="ActivityTime" class="form-control " type="Time">
            <br>
            
            <span asp-validation-for="Duration" class="red"></span><br>
            <label asp-for="Duration"></label>
            <input asp-for="Duration" class="form-control " type="number" min="0">
            
            <select name="DurationUnit" class="form-control input-lg" >
                <option value="h">Hours</option>
                <option value="m">Minutes</option>
                <option value="d">Days</option>    
            </select>            
            
            <span asp-validation-for="Description" class="red"></span><br>
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control ">
            <br>
            <br>
            
            <div class="row ">
                <div class="col-5">
                    <input type="submit" value="Create" class="form-control btn-primary ">
                </div>
            </div>
            
                <input type="hidden" value="@ViewBag.UserId" asp-for="UserId">
            </form>
        </div>
    </div>
  
</div>
